<?xml version = "1.0" encoding = "utf-8"?>
<odoo>
    <record id="action_product_bom_list" model="ir.ui.view">
        <field name="name">product assembly list</field>
        <field name="model">product.bom</field>
        <field name="arch" type="xml">
            <list>
                <field name="product_id"/>
                <field name="quantity"/>
            </list>
        </field>
    </record>
    <record id="bom_view_action" model="ir.actions.act_window">
        <field name="name">Product BOM</field>
        <field name="res_model">product.bom</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>