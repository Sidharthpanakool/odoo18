<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="vehicle_repair_report">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">

                    <div class="oe_structure"/>
                    <h2>Vehicle Repair Report</h2>
                    <br>
                    </br>

                    <t t-foreach="docs" t-as="w">

                        <h4>
                            <strong>Customer:</strong>
                            <t t-esc="w['names']"/>
                        </h4>
                        <h4>
                            <strong>Vehicle Model:</strong>
                            <t t-esc="w['vehicle_model']"/>
                        </h4>
                        <h4>
                            <strong>Vehicle Number:</strong>
                            <t t-esc="w['vehicle_number']"/>
                        </h4>
                        <h4>
                            <strong>Service Advisor:</strong>
                            <t t-esc="w['service_advisor_id']"/>
                        </h4>
                        <h4>
                            <strong>Start Date:</strong>
                            <t t-esc="w['start_date']"/>
                        </h4>
                        <h4>
                            <strong>Delivery Date:</strong>
                            <t t-esc="w['delivery_date']"/>
                        </h4>
                        <h4>
                            <strong>State:</strong>
                            <t t-esc="w['status']"/>
                        </h4>
                        <h4>
                            <strong>Vehicle Type:</strong>
                            <t t-esc="w['vehicle_type']"/>
                        </h4>
                        <h4>
                            <strong>Service Type:</strong>
                            <t t-esc="w['service_type']"/>
                        </h4>
                        <h4>
                            <strong>Estimated Amount:</strong>
                            <t t-esc="w['estimated_amt']"/>
                        </h4>
                        <h4>
                            <strong>Total Amount:</strong>
                            <t t-esc="w['total_cost']"/>
                        </h4>

                    </t>
                    <table style="border: 1px solid #ddd; border-collapse: collapse; width: 100%; margin-top: 10px;">
                        <thead>

                            <tr style="background-color: #f2f2f2; text-align: left;">
                                <th style="border: 1px solid #ddd; padding: 8px;">Customer</th>
                                <th style="border: 1px solid #ddd; padding: 8px;">Vehicle model</th>
                                <th style="border: 1px solid #ddd; padding: 8px;">Vehicle number</th>
                                <th style="border: 1px solid #ddd; padding: 8px;">Service advisors</th>
                                <th style="border: 1px solid #ddd; padding: 8px;">Start date</th>
                                <th style="border: 1px solid #ddd; padding: 8px;">End date</th>
                                <th style="border: 1px solid #ddd; padding: 8px;">State</th>
                                <th style="border: 1px solid #ddd; padding: 8px;">Vehicle type</th>
                                <th style="border: 1px solid #ddd; padding: 8px;">Service type</th>
                                <th style="border: 1px solid #ddd; padding: 8px;">Estimated amount</th>
                                <th style="border: 1px solid #ddd; padding: 8px;">Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>

                            <t t-foreach="docs" t-as="line">
                                <tr>
                                    <td style="border: 1px solid #ddd; padding: 8px;">
                                        <t t-out="line['names']"/>
                                    </td>
                                    <td style="border: 1px solid #ddd; padding: 8px;">
                                        <t t-out="line['vehicle_model']"/>
                                    </td>
                                    <td style="border: 1px solid #ddd; padding: 8px;">
                                        <t t-out="line['vehicle_number' ]"/>
                                    </td>
                                    <td style="border: 1px solid #ddd; padding: 8px;">
                                        <t t-out="line['service_advisor_id']"/>
                                    </td>
                                    <td style="border: 1px solid #ddd; padding: 8px;">
                                        <t t-out="line['start_date']"/>
                                    </td>
                                    <td style="border: 1px solid #ddd; padding: 8px;">
                                        <t t-out="line['delivery_date']"/>
                                    </td>
                                    <td style="border: 1px solid #ddd; padding: 8px;">
                                        <t t-out="line['status']"/>
                                    </td>
                                    <td style="border: 1px solid #ddd; padding: 8px;">
                                        <t t-out="line['vehicle_type']"/>
                                    </td>
                                    <td style="border: 1px solid #ddd; padding: 8px;">
                                        <t t-out="line['service_type']"/>
                                    </td>
                                    <td style="border: 1px solid #ddd; padding: 8px;">
                                        <t t-out="line['estimated_amt']"/>
                                    </td>
                                    <td style="border: 1px solid #ddd; padding: 8px;">
                                        <t t-out="line['total_cost']"/>
                                    </td>

                                </tr>
                            </t>
                        </tbody>
                    </table>

