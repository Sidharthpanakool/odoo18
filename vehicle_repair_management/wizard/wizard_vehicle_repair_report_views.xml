<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="wizard_vehicle_Repair_report_form" model="ir.ui.view">
        <field name="name">wizard_vehicle_Repair_report_form</field>
        <field name="model">wizard.vehicle.repair.report</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <form string="Vehicle Repair Report">
                <sheet>
                    <group>
                        <group>
                            <field name="start_date"/>
                            <field name="customer_id" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="delivery_date"/>
                            <field name="service_advisor_id" widget="many2many_tags"/>
                        </group>
                        <!--                        <field name="vehicle_type"/>-->
                        <!--                        <field name="vehicle_model"/>-->
                        <!--                        <field name="vehicle_number"/>-->
                        <!--                        <field name="service_type"/>-->
                        <!--                        <field name="estimated_amt"/>-->
                        <!--                        <field name="total_cost"/>-->
                    </group>
                </sheet>
                <footer>
                    <button name="action_print" string="Print" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_vehicle_Repair_report" model="ir.actions.act_window">
        <field name="name">vehicle Repair report</field>
        <field name="res_model">wizard.vehicle.repair.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>