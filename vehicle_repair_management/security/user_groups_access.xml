        <record id="user_group_manager_record_rules" model="ir.rule">
            <field name="name">User can only see their own records</field>
            <field name="model_id" ref="model_vehicle_repair"/>
            <field name="domain_force">[(1, '=', 1),('company_id', 'in',company_ids)]</field>
            <field name="groups" eval="[(4, ref('user_group_manager'))]"/>

        </record>

        <record id="user_group_technician_record_rules" model="ir.rule">
            <field name="name">User can only see their own records</field>
            <field name="model_id" ref="model_vehicle_repair"/>
            <field name="domain_force">[('create_uid','=',user.id),('company_id', 'in',company_ids)]</field>
            <field name="groups" eval="[(4, ref('user_group_technician'))]"/>

        </record>
