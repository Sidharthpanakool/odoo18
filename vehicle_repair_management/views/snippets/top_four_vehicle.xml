<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="top_four_vehicle" name="Vehicle Orders Carousal">
        <section class="categories_section">
            <div class="container d-flex flex-column justify-content-center">
                <div class="" style="text-align:center; font-family:Arial, Helvetica,Serif; font-style:oblique;">
                    <h1>Latest 4 Repair Orders</h1>
                </div>
            </div>
            <div id="latest_cars"/>
        </section>
    </template>

    <template id="vehicle_snippet" inherit_id="website.snippets"
              name="Vehicle Snippet">
        <xpath expr="//snippets[@id='snippet_groups']" position="inside">
            <t t-snippet="vehicle_repair_management.top_four_vehicle"
               t-thumbnail="/vehicle_repair_management/static/src/images/snippets/banner.jpg"/>
        </xpath>
    </template>
</odoo>
