                       <div id="course_carousel" class="owl-stage" style="transform: translate3d(-1500px, 0px, 0px); transition: all 0.25s ease 0s; width: 4321px;">
                    <t t-foreach="result.vehicles" t-as="veh" t-key="veh.id">

                        <div class="card shadow rounded-3 border-0  d-inline-block m-5" style="width: 20rem; height:27rem; background-color: coral; box-shadow: 10px 10px 5px red;">
                            <a t-attf-href="odoo/action-625/{{veh.id}}">
<!--                        <a t-attf-href="odoo/action-625/{{veh.id}}">-->

                                <img t-attf-src="data:image/png;base64,{{veh.vehicle_image}}"  alt="Avatar" style='height:55%; width:100%; object-fit:cover;'/>

                                <div class="card-body">

                                    <h6>REF NO :
                                        <t t-esc="veh.reference_number"/>
                                    </h6>


                                    <p>
                                        <t t-esc="veh.vehicle_number"/>
                                    </p>


                                    <p class="card-text">Customer :
                                    <t t-esc="veh.partner_id[1]"/>
                                    </p>
                                    <p>Mob No :
                                        <t t-esc="veh.mobile_number"/>
                                    </p>
                                    <p>Service Advisor :
                                        <t t-esc="veh.service_advisor_id[1]"/>
                                    </p>



                                </div>
                            </a>

                        </div>
                    </t>


