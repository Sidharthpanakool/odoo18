<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="vehicle_repair_management.category_data">
        <div id="course_carousel" class="container carousel slide" data-bs-ride="carousel" t-att-data-bs-interval="interval">
            <div class="carousel-inner row w-100 mx-auto pt-4" role="listbox">
                <t t-foreach="chunks" t-as="vehi" t-key="vehi.id">
                    <div class="carousel-item active">
                        <div class="row">
                            <t t-foreach="vehi" t-as="veh" t-key="veh.id">
                                <div class="block span3 col-3">
                                    <a t-attf-href="odoo/action-625/{{veh.id}}">
                                        <div class="card" style="height:30rem; width:20rem;">
                                            <img t-attf-src="data:image/png;base64,{{veh.vehicle_image}}" alt="Avatar"
                                                style='height:50%; width:100%; object-fit:cover;'
                                                class="p-4 rounded-5"/>
                                            <h5 class="p-2">REF NO :
                                                <t t-esc="veh.reference_number"/>
                                            </h5>
                                            <h6 class="p-2"> VEHICLE NO :
                                                <t t-esc="veh.vehicle_number"/>
                                             </h6>
                                            <h6 class="p-2">CUSTOMER :
                                                <t t-esc="veh.partner_id[1]"/>
                                            </h6>
                                            <h6 class="p-2">MOB NO :
                                                <t t-esc="veh.mobile_number"/>
                                             </h6>
                                            <h6 class="p-2">SERVICE ADVISOR :
                                                <t t-esc="veh.service_advisor_id[1]"/>
                                            </h6>
                                        </div>
                                    </a>
                                </div>

                            </t>
                        </div>
                    </div>

                </t>
            </div>
            <a t-attf-href="#course_carousel" class="carousel-control-prev" data-bs-slide="prev" role="button" aria-label="Previous" title="Previous">
                <span class="fa fa-chevron-circle-left fa-3x" style="color: #714B67"/>
                <span class="visually-hidden">Previous</span>
            </a>
            <a t-attf-href="#course_carousel" class="carousel-control-next" data-bs-slide="next" role="button" aria-label="Next" title="Next">
                <span class="fa fa-chevron-circle-right fa-3x" style="color: #714B67"/>
                <span class="visually-hidden">Next</span>
            </a>
        </div>
    </t>
</templates>