<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_pos_configuration_form" model="ir.ui.view">
        <field name="name">pos.config.view.form.inherit.pos.order.types</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_inventory_section']" position="after">
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="enable_storage_location"/>
                        </div>

                        <div class="o_setting_right_pane">
                            <label for="enable_storage_location"/>
                            <div class="text-muted">
                                Select Current Storage Location
                            </div>
                            <div class="content-group mt16" invisible="enable_storage_location == False">
                                <field name="storage_location" />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
