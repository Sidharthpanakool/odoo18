    <record id="res_partner_view_form" model="ir.ui.view">
        <field name="name">res.partner.view.form.inherit.hr</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='last_reference_date']" position="after">
                <field name="restricted"/>
                <field name="restricted_count" invisible="restricted == False"/>
            </xpath>
        </field>
    </record>


    <record id="view_order_form_inherit_project_purchase_inh" model="ir.ui.view">
        <field name="name">purchase.order.form.purchase.project.inh</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_ref']" position="after">
                <field name="restricted_boolean" invisible="restricted_boolean == False"/>
                <field name="restricted_count" invisible="restricted_boolean == False"/>
            </xpath>

        </field>
    </record>


