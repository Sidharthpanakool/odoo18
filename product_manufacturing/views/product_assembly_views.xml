<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
     <record id="action_product_assembly_list_view"
            model="ir.ui.view">
        <field name="name">product assembly list</field>
        <field name="model">product.assembly</field>
        <field name="arch" type="xml">
            <list string="Channel">
                <field name="assembly_id" />
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="product_assembly_form" model="ir.ui.view">
        <field name="name">product assembly form view</field>
        <field name="model">product.assembly</field>
        <field name="arch" type="xml">
            <form string="product assembly form view create">
                <header>

                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <notebook>
                        <page string="Components">
                            <field name="consumed_parts_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="product_uom_qty"/>
                                </list>
                        </field>
                        </page>
                    </notebook>
                </sheet>
<!--                <chatter/>-->
            </form>
        </field>
    </record>



    <data noupdate="1">
        <record id="reference_number_seq" model="ir.sequence">
            <field name="name">Reference number Sequence</field>
            <field name="code">product.assembly.code</field>
            <field name="prefix">pdt/</field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
    </data>



    <record id="product_assembly" model="ir.actions.act_window">
        <field name="name">Product Assembly</field>
        <field name="res_model">product.assembly</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>