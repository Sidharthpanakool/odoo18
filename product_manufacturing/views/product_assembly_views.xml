<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
     <record id="action_product_assembly_list_view"
            model="ir.ui.view">
        <field name="name">product assembly list</field>
        <field name="model">product.assembly</field>
        <field name="arch" type="xml">
            <list string="Channel">
                <field name="product_id"/>
                <field name="quantity"/>
            </list>
        </field>
    </record>

    <record id="product_assembly_form" model="ir.ui.view">
        <field name="name">product assembly form view</field>
        <field name="model">product.assembly</field>
        <field name="arch" type="xml">
            <form string="product assembly form view create">
                <header>

                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="product_id"/>
                        </h1>
                        <group>
                             <field name="quantity"/>
                        </group>
                    </div>
                    <notebook>
                        <page string="Components">
                            <field name="consumed_parts_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="product_uom_qty"/>
                                </list>
                        </field>
                        </page>
                    </notebook>
                </sheet>
<!--                <chatter/>-->
            </form>
        </field>
    </record>


     <record id="action_product_creation_list_view"
            model="ir.ui.view">
        <field name="name">product assembly list</field>
        <field name="model">product.creation</field>
        <field name="arch" type="xml">
            <list string="Channel">
                <field name="assembly_id" />
                <field name="product_assembly_id"/>
<!--                <field name="quantity"/>-->
            </list>
        </field>
    </record>


    <record id="product_creation_form" model="ir.ui.view">
        <field name="name">product assembly form view</field>
        <field name="model">product.creation</field>
        <field name="arch" type="xml">
            <form string="product creation form view create">
                <header>
                    <button name="action_create_pmo"
                            class=" btn btn-outline-primary o_form_button_create "
                            string="Confirm"
                            type="object"
                            />

                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,done"
                           options="{'clickable':1}"/>

                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="assembly_id"/>
                        </h1>
                        <group>
                            <field name="product_assembly_id"/>
                            <field name="quantity"/>
                        </group>

                    </div>
                    <notebook>
                        <page string="Components">
                            <field name="components_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="product_uom_qty"/>
                                </list>
                        </field>
                        </page>
                    </notebook>
                </sheet>
<!--                <chatter/>-->
            </form>
        </field>
    </record>



<!--    <data noupdate="1">-->
        <record id="reference_number_sequence" model="ir.sequence">
            <field name="name">Product Manufacturing order Sequence</field>
            <field name="code">product.creation.code</field>
            <field name="prefix">PMO/</field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
<!--    </data>-->


    <record id="product_assembly" model="ir.actions.act_window">
        <field name="name">Product BOM</field>
        <field name="res_model">product.assembly</field>
        <field name="view_mode">list,form</field>
    </record>


    <record id="product_creation" model="ir.actions.act_window">
        <field name="name">Product creation</field>
        <field name="res_model">product.creation</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>

























