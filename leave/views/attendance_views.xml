<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_attendance_home_list" model="ir.ui.view">
        <field name="name">Attendance Home</field>
        <field name="model">hr.absentees</field>
        <field name="arch" type="xml">
            <list name="employee_absentee_list" multi_edit="1">
                <field name="name"/>
                <field name="employee_ids" widget="many2one_avatar_user"/>

            </list>
        </field>
    </record>

    <record id="action_attendance_home_form_view" model="ir.ui.view">
        <field name="name">Attendance form</field>
        <field name="model">hr.absentees</field>
        <field name="arch" type="xml">
            <form string="Vehicle repair form view">
                <header>

                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="employee_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_attendance_search" model="ir.ui.view">
        <field name="name">Attendance search</field>
        <field name="model">hr.absentees</field>
        <field name="arch" type="xml">
            <search string="name">
                <separator/>
                <group expand="1" string="Group By">
                    <filter name="group_by_date"
                            string="Date"
                            context="{'group_by':'name:day',
                            'residual_visible':True,
                            'search_default_group_by_date':1}"/>

                </group>
            </search>
        </field>
    </record>

    <record id="action_attendance_home" model="ir.actions.act_window">
        <field name="name">Leave</field>
        <field name="res_model">hr.absentees</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_group_by_date': 1}</field>
    </record>

</odoo>