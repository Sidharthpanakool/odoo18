<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="idle_time" name="idle time" inherit_id="survey.survey_fill_form_start">
        <xpath expr="//div[@t-if='survey.is_time_limited']" position="after">
            <div t-if="survey.quiz_idle_time" class="text-left mt-2">
                <span >Idle time limit for one page(In seconds) :</span>
                <span id="time_limit" class="text-danger fw-bold"></span>
            </div>
        </xpath>
    </template>

    <template id="idle_timer" name="timer" inherit_id="survey.survey_fill_header">
        <xpath expr="//div[contains(@class, 'o_survey_timer')]" position="inside">
                <div t-if="survey.quiz_idle_time" class="text-center mt-2" invisible="">
                <span class="text-danger fw-bold">Idle Time</span>
                <h2 id="timer" class="text-danger fw-bold"></h2>
            </div>

        </xpath>
    </template>
</odoo>