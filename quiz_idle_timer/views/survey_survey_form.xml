<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="quiz_idle_time" model="ir.ui.view">
            <field name="name">survey.quiz.idle.time.inherit</field>
            <field name="model">survey.survey</field>
            <field name="inherit_id" ref="survey.survey_survey_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='is_time_limited']" position="before">
                    <label for="quiz_idle_time" string="Idle Time Limit"/>
<!--                    invisible="survey_type == 'live_session'"-->
                    <div class="o_checkbox_optional_field" name="quiz_idle_time"
                                         >
<!--                        invisible="survey_type == 'live_session'"-->
                        <field name="quiz_idle_time"/>
                        <div invisible="not quiz_idle_time">
                            <field name="idle_time_limit" widget="float_time" nolabel="1" class="oe_inline"/> Minutes

                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>