<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
   <t t-name="weather_systray_dropdown" owl="1">
       <Dropdown>
           <div class="new_icon">
               <div class="icon_div">
                   <div class="toggle-icon" role="button">
                       <i class="fa fa-cloud"
                          style="color: white; font-size:20px; padding:14px;"
                          title="Weather Info"/>
                   </div>
               </div>
           </div>
           <t t-set-slot="content">
               <div class="p-3 d-flex flex-row" style="min-width: 300px;">
                   <group>
                       <h5>
                           <t t-esc="state.date"/>
                       </h5>
                        <p>Day
                            <t t-esc="state.temp_max || '--'"/>°,
                           Night
                            <t t-esc="state.temp_min || '--'"/>°
                        </p>
                       <h1>
                           <t t-esc="state.temp"/>°
                           <t t-esc="state.condition"/>
                       </h1>
                       <p><t t-esc="state.description"/>
                       in
                       <t t-esc="state.city"/>
                       </p>
                       <p>Near  <t t-esc="state.city"/></p>
                       <small>
                           <b>Last update:</b><br/>
                           <t t-esc="state.last_update"/>
                       </small>
                   </group>
                        <group>
                        <div>
                            <img t-attf-src="https://openweathermap.org/img/wn/{{state.icon }}@2x.png" width="140"/>
                        </div>
                   </group>
               </div>
           </t>
       </Dropdown>
   </t>
</templates>

