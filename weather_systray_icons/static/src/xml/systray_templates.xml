<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <!-- Systray Icon -->
        <t t-name="weather_systray_icons.SystrayWeatherIcon" owl="1">
            <div>
                <i class="fa fa-cloud"
                   title="Weather Info"
                   style="cursor: pointer; font-size: 20px; color: white; padding:13px;"
                   t-on-click="openPopup"
                />
            </div>
        </t>

        <!-- Weather Popup -->
        <t t-name="weather_systray_icons.WeatherPopup" owl="1">
            <Dialog>
                <div class="o_dialog_content" style="min-width:280px;">
                    <div class="p-4 d-flex flex-row">
                        <group>

                            <p>
                            <t t-esc="props.props.weather?.date || '--'"/>
                            </p>
                            <p>
                                Day
                            <t t-esc="props.props.weather?.temp_max || '--'"/>°,
                                Night
                            <t t-esc="props.props.weather?.temp_min || '--'"/>°


                            </p>
                            <h1>
                                <t t-esc="props.props.weather?.temp || '--'"/>°
                                <t t-esc="props.props.weather?.condition || '--'"/>
                            </h1>

                            <p>
                            <t t-esc="props.props.weather?.description || '--'"/>
                            in
                            <t t-esc="props.props.weather?.city || '--'"/>
                            </p>
                            <p>
                                Near <t t-esc="props.props.weather?.city || '--'"/>
                            </p>
                            <p>
                                <b>Last update : </b>
                                <br/>
                                <t t-esc="props.props.weather?.last_update || '--'"/>
                            </p>
                        </group>

                        <group>
                            <div>
                                <img t-attf-src="https://openweathermap.org/img/wn/{{props.props.weather?.icon }}@2x.png" width="200"/>
                            </div>

                        </group>

                    </div>
                    <div>

                    </div>
                </div>
            </Dialog>
        </t>
    </templates>





