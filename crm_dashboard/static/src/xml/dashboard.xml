<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="crm_dashboard.CrmDashboard">
        <div style="overflow-x: auto; max-width: 100%; max-height: 100%;">

           <div>
               <center>
                   <h1 style="margin:20px;">CRM Dashboard</h1>
               </center>
           </div>
            <div class="d-flex justify-content-end " style="margin-right:100px;">
              <select id="crm_filter" class="form-select" style="width:200px; border-width: 5px;" t-on-change="onFilterChange">
                  <option value="" selected="selected" disabled="disabled">Search By...</option>
                  <option value="year">This Year</option>
                  <option value="quarter">This Quarter</option>
                  <option value="month">This Month</option>
                  <option value="week">This Week</option>
              </select>
            </div>

        <div class="row main-section" style="margin-left: 120px; margin-right: 120px;">

           <!-- Lead Tile-->
           <div id="leads" class="col-md-4 col-sm-6 tot_tasks oh-payslip"
                style=" overflow: hidden; padding-top: 30px;"
                t-on-click="redirect_to_leads">
               <div class="oh-card" style="box-shadow:2px 4px 8px 2px rgba(0,0,0.3,0.2);
               display: flex; justify-content: center;" role="button">
                   <div class="oh-card-body"
                        style="padding: 5px 5px; float: left; width: 100%;
                         height: auto; box-sizing: border-box; margin: 0;">
                       <div class="stat-widget-one">
                           <div class="stat-icon bg-mauve-light d-flex justify-content-left align-items-left">
                               <div style="background:#b3e6ff; width:65px; text-align: center;">
                                   <i class="fa fa-tasks text-mauve"
                                      style="font-size:50px;"/>
                               </div>
                               <div class="stat_content" style="text-align: center; font-weight: bold;
                                 padding-top: 20px; padding-left: 80px;">
                                   <div class="stat_count_lead"
                                        style="font-size: 17px;">
                                       <span id="templates">
                                            <div id="my_lead"/>
                                       </span>
                                   </div>
                                   <div class="stat-head"
                                        style="font-size: 14px;">My Leads
                                   </div>
                               </div>
                           </div>
                       </div>
                   </div>
               </div>
           </div>
           <!-- Opportunity Tile-->
           <div id="opportunity" class="col-md-4 col-sm-6 tot_tasks oh-payslip"
                style=" overflow: hidden; padding-top: 30px;"
                t-on-click="redirect_to_opportunity">
               <div class="oh-card" style="box-shadow:2px 4px 8px 2px rgba(0,0,0.3,0.2);
               display: flex; justify-content: center;" role="button">
                   <div class="oh-card-body"
                        style="padding: 5px 5px; float: left; width: 100%;
                         height: auto; box-sizing: border-box; margin: 0;">
                       <div class="stat-widget-one">
                           <div class="stat-icon bg-mauve-light d-flex justify-content-left align-items-left">
                               <div style="background:#ffb31a; width:65px; text-align: center;">
                                   <i class="fa fa-trophy  text-mauve"
                                      style="font-size:50px;"/>
                               </div>
                               <div class="stat-content" style="
                                 text-align: center; font-weight: bold;
                                 padding-top: 20px; padding-left: 80px;">
                                   <div class="stat_count_opp"
                                        style="font-size: 17px;">
                                       <span id="templates">
                                            <div id="my_opportunity"/>
                                       </span>
                                   </div>
                                   <div class="stat-head"
                                        style="font-size: 14px;">My Opportunity
                                   </div>
                               </div>
                           </div>
                       </div>
                   </div>
               </div>
           </div>
           <!-- Expected Revenue -->
           <div id="expected_revenue"
                class="col-md-4 col-sm-6 tot_tasks oh-payslip"
                style=" overflow: hidden; padding-top: 30px;">
               <div class="oh-card" style="box-shadow:2px 4px 8px 2px rgba(0,0,0.3,0.2);
               display: flex; justify-content: center;" role="button">
                   <div class="oh-card-body"
                        style="padding: 5px 5px; float: left; width: 100%;
                         height: auto; box-sizing: border-box; margin: 0;">
                       <div class="stat-widget-one">
                           <div class="stat-icon bg-mauve-light d-flex justify-content-left align-items-left">
                               <div style="background:#85BB65;; width:65px; text-align: center;">
                                   <i class="fa fa-usd  text-mauve"
                                      style="font-size:50px;"/>
                               </div>
                               <div class="stat-content" style="
                                 text-align: center; font-weight: bold;
                                 padding-top: 20px; padding-left: 80px;">
                                   <div class="stat_count_ex_rev"
                                        style="font-size: 17px;">
                                       <span id="templates">
                                            <div id="exp_revenue"/>
                                       </span>
                                   </div>
                                   <div class="stat-head"
                                        style="font-size: 14px;">Expected
                                       revenue
                                   </div>
                               </div>
                           </div>
                       </div>
                   </div>
               </div>
           </div>

            <div class="col-md-2">

            </div>

            <!--Revenue-->

            <div id="expected_revenue"
                class="col-md-4 col-sm-6 tot_tasks oh-payslip"
                style=" overflow: hidden; padding-top: 30px;">
               <div class="oh-card" style="box-shadow:2px 4px 8px 2px rgba(0,0,0.3,0.2);
               display: flex; justify-content: center;" role="button">
                   <div class="oh-card-body"
                        style="padding: 5px 5px; float: left; width: 100%;
                         height: auto; box-sizing: border-box; margin: 0;">
                       <div class="stat-widget-one">
                           <div class="stat-icon bg-mauve-light d-flex justify-content-left align-items-left">
                               <div style="background:#aaaa55;; width:65px; text-align: center;">
                                   <i class="fa fa-money  text-mauve"
                                      style="font-size:50px;"/>
                               </div>
                               <div class="stat-content" style="
                                 text-align: center; font-weight: bold;
                                 padding-top: 20px; padding-left: 80px;">
                                   <div class="stat_count_ex_rev"
                                        style="font-size: 17px;">
                                       <span id="templates">
                                            <div id="revenue"/>
                                       </span>
                                   </div>
                                   <div class="stat-head" style="font-size: 14px;">Revenue
                                   </div>
                               </div>
                           </div>
                       </div>
                   </div>
               </div>
           </div>

            <!--win Loss-->

            <div id="win_loss_ratio"
                class="col-md-4 col-sm-6 tot_tasks oh-payslip"
                style=" overflow: hidden; padding-top: 30px;">
               <div class="oh-card" style="box-shadow:2px 4px 8px 2px rgba(0,0,0.3,0.2);
               display: flex; justify-content: center;" role="button">
                   <div class="oh-card-body"
                        style="padding: 5px 5px; float: left; width: 100%;
                         height: auto; box-sizing: border-box; margin: 0;">
                       <div class="stat-widget-one">
                           <div class="stat-icon bg-mauve-light d-flex justify-content-left align-items-left">
                               <div style="background:#ffc299;; width:65px; text-align: center;">
                                   <i class="fa fa-percent  text-mauve"
                                      style="font-size:50px;"/>
                               </div>
                               <div class="stat-content" style="
                                 text-align: center; font-weight: bold;
                                 padding-top: 20px; padding-left: 80px;">
                                   <div class="stat_count_ex_rev" style="font-size: 17px;">
                                       <span id="templates">
                                            <div id="won"/>
                                       </span>
                                   </div>
                                   <div class="stat-head" style="font-size: 14px;">Won
                                   </div>
                               </div>


                               <div class="stat-content" style="
                                 text-align: center; font-weight: bold;
                                 padding-top: 14px; padding-left: 80px;">
                                   <div class="stat-head" style="font-size: 25px;">:
                                   </div>
                               </div>

                               <div class="stat-content" style="
                                 text-align: center; font-weight: bold;
                                 padding-top: 20px; padding-left: 80px;">
                                   <div class="stat_count_ex_rev"
                                        style="font-size: 17px;">
                                       <span id="templates">
                                            <div id="loss"/>
                                       </span>
                                   </div>
                                   <div class="stat-head" style="font-size: 14px;">Loss
                                   </div>
                               </div>
                           </div>
                       </div>
                   </div>
               </div>
           </div>

           <div class="col-md-2">

           </div>

           <div id="charts_section" class="p-3 m-auto">
              <div class="row mt-5 p-4">

                <div class="col-md-4">
                  <h4>Activity</h4>
                  <canvas id="activity_pie" height="200"></canvas>
                </div>
                  <div class="col-md-4">
                  <h4>Lost Opportunity / Lead</h4>
                  <canvas id="lost_lead_chart" height="200"></canvas>
                </div>

                <div class="col-md-4">
                  <h4>Leads by Medium</h4>
                  <canvas id="leads_medium_donut" height="200"></canvas>
                </div>
                <div class="col-md-6">
                  <h4>Leads by Campaign</h4>
                  <canvas id="leads_campaign_chart" height="200"></canvas>
                </div>

                <div class="col-md-6">


                    <table style="border: 1px solid #ddd; border-collapse: collapse; width: 80%;
                    margin-top: 50px; margin-bottom: 50px; margin-left: 100px; margin-right: 100px;
                    padding:100px;">
                        <thead>
                            <tr style="background-color: #7ED1ED;; text-align: left;">
                                    <th style="border: 1px solid #ddd; padding: 8px;">Month</th>
                                    <th style="border: 1px solid #ddd; padding: 8px;">Leads</th>
                            </tr>
                        </thead>
                        <tbody>

                        <t t-foreach="state.leads_by_month" t-as="item" t-key="item.month">
                            <tr>
                                <td style="border: 1px solid #ddd; padding: 8px;">
                                    <t t-esc="item.month"/>
                                </td>
                                <td style="border: 1px solid #ddd; padding: 8px;">
                                    <t t-esc="item.count"/>
                                </td>
                            </tr>
                        </t>
                        </tbody>
                    </table>
                </div>
                </div>
              </div>
           </div>
        </div>
   </t>

</templates>