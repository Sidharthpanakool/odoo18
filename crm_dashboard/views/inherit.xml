<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="crm_lead_states_in_sales_team" model="ir.ui.view">
        <field name="name">crm.team.form</field>
        <field name="model">crm.team</field>
        <field name="inherit_id" ref="sales_team.crm_team_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options_active']" position="before">
                <div name="lead_state" class="">
                    <label for="lead_state_id">Lead State</label>
                    <field name="lead_state_id" string="Default Lead State"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>